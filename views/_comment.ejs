<li type="square" id="comment-<%=comment._id%>">
    <p>
        <% if(locals.user && locals.user.id==comment.user.id ){ %>
            <small>
                <a href="/comments/destroy/<%=comment._id%>"  class="delete-comment-button">
                    Delete this comment    
                </a>
            </small>
        <%}%>

        <big>
            <%= comment.content%>
        </big>
        
        <br>
        <br>
        <small>
              ~ Commented by :- <%=comment.user.name%> 
        </small>
    </p>
</li>